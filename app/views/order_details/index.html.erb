<h1>Listing order_details</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Order</th>
    <th>Unit price</th>
    <th>Quantity</th>
    <th>Product name</th>
    <th>Product unit</th>
    <th>Product type number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.product_id %></td>
    <td><%= order_detail.order_id %></td>
    <td><%= order_detail.unit_price %></td>
    <td><%= order_detail.quantity %></td>
    <td><%= order_detail.product_name %></td>
    <td><%= order_detail.product_unit %></td>
    <td><%= order_detail.product_type_number %></td>
    <td><%= link_to 'Show', order_detail %></td>
    <td><%= link_to 'Edit', edit_order_detail_path(order_detail) %></td>
    <td><%= link_to 'Destroy', order_detail, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

