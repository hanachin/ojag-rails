<h1>Listing orders</h1>

<table>
  <tr>
    <th>Account</th>
    <th>Order code</th>
    <th>Delivery place</th>
    <th>Delivering at</th>
    <th>Customer name</th>
    <th>Company name</th>
    <th>Company location</th>
    <th>Company zip code</th>
    <th>Company phone</th>
    <th>Company fax</th>
    <th>Note</th>
    <th>Ordered at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.account_id %></td>
    <td><%= order.order_code %></td>
    <td><%= order.delivery_place %></td>
    <td><%= order.delivering_at %></td>
    <td><%= order.customer_name %></td>
    <td><%= order.company_name %></td>
    <td><%= order.company_location %></td>
    <td><%= order.company_zip_code %></td>
    <td><%= order.company_phone %></td>
    <td><%= order.company_fax %></td>
    <td><%= order.note %></td>
    <td><%= order.ordered_at %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

